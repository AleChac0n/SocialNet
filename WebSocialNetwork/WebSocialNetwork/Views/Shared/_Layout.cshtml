                                            <img src="@Context.Session.GetString("FotoPerfil")" alt="" class="rounded-circle" style="object-fit: cover;" width="54" height="54"> 
                                            <div class="ms-3">
                                                 <h6 class="mb-0 dropdown-user-name">@Context.Session.GetString("Nombre")!.ToString()</h6>
                                                <small class="mb-0 dropdown-user-designation text-secondary">
                                                    @Context.Session.GetString("Apellido1")!.ToString()
                                                    @Context.Session.GetString("Apellido2")!.ToString()
                                                </small> 
                                            </div>
                                        </div>
