                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-action="Perfil" asp-controller="Cuentas" asp-route-ID_Usuario="@Context.Session.GetString("IdUsuario")">
                                        <div class="d-flex align-items-center">
                                            <div class=""><i class="bi bi-person-fill"></i></div>
                                            <div class="ms-3"><span>Perfil</span></div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("ConfiguracionPerfil","Cuentas")">
