</html>
<script>

    

    $(document).ready(async function () {

        const mensaje = msj => `<div class="dropdown-item">${msj}</div>`


            $('#searchInput').on('keyup', async function () {
            let searchTerm = $(this).val().trim();
            if (searchTerm === null || searchTerm === "") {
                $('#ResultadoPersonas').empty();
                $('#ResultadoPersonas').append(mensaje("Ingrese una palabra para buscar"));
                $('#dropdownMenu').addClass('show');
            } else {
                try {
                    let usuarios = await ObtenerUsuarios(searchTerm);
                    if (usuarios !== null && usuarios.length > 0) {
                        $('#ResultadoPersonas').empty();
                        let contador = 0;                        
                        while (contador < 5 && contador < usuarios.length) {
                            console.log(usuarios[0])
                            var usuarioItem =
                                `<a class="dropdown-item" href="/cuentas/perfil?ID_Usuario=${usuarios[contador].iD_Usuario}" >
                                <div class="d-flex align-items-center">
                                    <img src="${usuarios[contador].urlFotoPerfil}" alt="" class="rounded-circle" width="50" height="50" style="object-fit: cover;">
                                    <div class="ms-3 flex-grow-1">
                                        <h6 class="mb-0 dropdown-msg-user">${usuarios[contador].nombre} ${usuarios[contador].apellido1} ${usuarios[contador].apellido2}</h6>
                                        <small class="mb-0 dropdown-msg-text text-secondary d-flex align-items-center">Ver perfil</small>
                                    </div>
                                </div>
                             </a>`;
                            $('#ResultadoPersonas').append(usuarioItem);
                            contador++;
                        }
                    }else{
                        $('#ResultadoPersonas').empty();
                        $('#ResultadoPersonas').append(mensaje("No se encontraron resultados"));

                    }
                    $('#dropdownMenu').addClass('show');
                } catch (error) {
                    console.error("Error al obtener usuarios:", error);
                }
            }
        });
    });

    $(document).on('click', function (event) {
        if (!$(event.target).closest('#searchInput, #dropdownMenu').length) {
            $('#dropdownMenu').removeClass('show');
        }
    });


    async function ObtenerUsuarios(searchTerm) {
        try {
            let data = await $.ajax({
                url: `/Usuario/ConsultarUsuarioPorNombre/?Nombre=` + searchTerm,
                type: "GET"
            });
            return data;
        } catch (error) {
            console.error("Error en la llamada AJAX:", error);
            throw error; // Lanzar el error nuevamente para que pueda ser manejado en la función que llama a ObtenerUsuarios
        }
    }

</script>
