@model IEnumerable<WebSocialNetwork.Entities.Publicacion>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var publicacion in Model)
    {
        <div class="col">
            <div class="card h-100">
                <div class="square-container">
                    <img src="@publicacion.UrlFotoPublicacion" class="card-img-top img-fluid square-image" alt="Publicación">
                </div>

                @if (publicacion.ID_Usuario == long.Parse(Context.Session.GetString("IdUsuario")))
                {
                    <div class="card-footer">
                        <div class="dropdown d-inline">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Opciones
                            </button>
                            <ul class="dropdown-menu">
                                <form asp-action="EliminarPublicacion" asp-controller="Publicacion">
                                    <input type="hidden" name="idPublicacion" value="@publicacion.ID_Publicacion" />
                                <li><button type="submit" class="dropdown-item">Eliminar Publicación</button></li>
                                </form>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    .square-container {
        position: relative;
        width: 100%;
        height: 0;
        padding-top: 100%; /* Cuadrado */
    }

    .square-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
</style>
